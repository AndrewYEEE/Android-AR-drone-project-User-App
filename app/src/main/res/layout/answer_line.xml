<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/answer_line"
    android:layout_margin="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="4dp"
            android:id="@+id/answer_user"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:text="User"
            android:layout_margin="2dp"
            android:textColor="#ffffff"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:id="@+id/answer_imageview"
            android:layout_toRightOf="@+id/answer_user"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="4dp"
            android:id="@+id/answer_answer"
            android:textSize="16sp"
            android:text="yeeee"
            android:background="@drawable/answer_line"
            android:layout_toRightOf="@+id/answer_imageview"

            />
    </RelativeLayout>
</LinearLayout>